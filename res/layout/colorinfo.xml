<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <View
        android:id="@+id/colorBox"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:background="@drawable/white_border" />

    <TextView
        android:id="@+id/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/colorBox"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@+id/colorBox"
        android:text=""
        android:textSize="18sp" />
    
    <LinearLayout
    	android:baselineAligned="false"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="100dp">
        
        <TextView
            android:layout_height="30dp" 
            android:layout_width="wrap_content" 
            android:layout_weight="1.0"
            android:paddingLeft="10.0dip"
            android:textSize="20dp"
            android:text="Brand: " 
            android:id="@+id/brandtext" />
        
        <TextView
            android:layout_height="30dp" 
            android:layout_width="wrap_content" 
            android:layout_weight="1.0"
            android:paddingLeft="10.0dip"
            android:textSize="20dp"
            android:text="RGB:" 
            android:id="@+id/rgbtext" />
                
        <TextView
            android:layout_height="30dp" 
            android:layout_width="wrap_content" 
            android:layout_weight="1.0"
            android:paddingLeft="10.0dip"
            android:textSize="20dp"
            android:text="Hex:" 
            android:id="@+id/hextext" />
                        
        <TextView
            android:layout_height="30dp" 
            android:layout_width="wrap_content" 
            android:layout_weight="1.0"
            android:paddingLeft="10.0dip"
            android:textSize="20dp"
            android:text="HSV:" 
            android:id="@+id/hsvtext" />

        <TextView
            android:id="@+id/analogouscolorstext"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:paddingLeft="10.0dip"
            android:text="Analogous Colors:"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:paddingLeft="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/analogcolor1"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/white_border" />

            <Button
                android:id="@+id/analogcolor2"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/white_border" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/complementarycolortext"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1.0"
            android:paddingLeft="10.0dip"
            android:text="Complementary Color:"
            android:textSize="20dp" />        

            <Button
                android:id="@+id/complementarycolor"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:background="@drawable/white_border" />        
        
    </LinearLayout>

    <Button
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/colorText"
        android:layout_alignParentRight="true"
        android:background="@drawable/star" />
    
 </RelativeLayout>