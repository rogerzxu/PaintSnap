<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <Button
        android:id="@+id/settings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/button_border"
        android:padding="15dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/colorcomparison"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_border"
        android:padding="15dp"
        android:text="Color Comparison"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/savedcolors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colorcomparison"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_border"
        android:padding="15dp"
        android:text="Saved Colors"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/colorpalette"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/savedcolors"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_border"
        android:padding="15dp"
        android:text="Color Palette"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/choosefromalbum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colorpalette"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_border"
        android:padding="15dp"
        android:text="Choose From Album"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/takephoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choosefromalbum"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_border"
        android:padding="15dp"
        android:text="Take New Photo"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</RelativeLayout>